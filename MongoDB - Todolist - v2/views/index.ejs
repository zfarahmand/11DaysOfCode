<%- include('header'); -%>
    <div class="box" id="heading">
        <h2>
            <%= listTitle %>
        </h2>
    </div>


    <div class="box">
        <% newItems.forEach((item) => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="delete" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>

        <form class="add-form" action="<%= redirect %>" method="post">
            <input type="text" name="newItem" placeholder="آیتم جدید" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
    </div>

    <%- include('footer'); -%>